{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["node"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "ignoreDeprecations": "5.0",
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["**\\*"]
}
